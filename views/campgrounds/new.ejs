<% include ../partials/header.ejs %>

<div class="container">
    
        <h1 style="text-align:center">Create a new Campground</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
                
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input class="form-control" type="text" id="nameInput" placeholder="name" name="name">
                </div>
                
                <div class="form-group">
                    <label for="imageInput">Image URL</label>
                    <input class="form-control" id="imageInput" type="text" placeholder="Image URL" name="image">
                </div>
                
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <input class="form-control" id="descriptionInput" type="text" placeholder="description" name="description">
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">submit</button>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>

