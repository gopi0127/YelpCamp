<% include ../partials/header.ejs %>

<div class="container">
    
        <h1 style="text-align:center">Edit "<%= campground.name %>"</h1>
        
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <label for="nameInput">Name</label>
                    <input class="form-control" type="text" id="nameInput" value="<%= campground.name%>" name="campground[name]">
                </div>
                
                <div class="form-group">
                    <label for="imageInput">Image URL</label>
                    <input class="form-control" id="imageInput" type="text" value="<%= campground.image%>" name="campground[image]">
                </div>
                
                <div class="form-group">
                    <label for="descriptionInput">Description</label>
                    <input class="form-control" id="descriptionInput" type="text" value="<%=campground.description%>" name="campground[description]">
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">update</button>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
</div>

<% include ../partials/footer.ejs %>

